<%= form_for @user do |f|%>
  <%= f.label :username, "Username:"%>
  <%= f.text_field :username, value: "u3" %>
  <%= f.label :password, "Password:"%>
  <%= f.password_field :password%>
  <%= f.label :email, "Email:"%>
  <%= f.email_field :email, placeholder: "example@example.com"%>

  <%= f.submit "Create"%>

 
<%end%>
